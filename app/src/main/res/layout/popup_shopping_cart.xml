<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/frame_5003"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" >

	<RelativeLayout android:id="@+id/content_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		android:background="@drawable/rectangle_gray_3" >

		<TextView
			android:id="@+id/tv_chosen_items"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="30dp"
			android:layout_marginTop="20dp"
			android:gravity="center"
			android:text="@string/chosen_items"
			android:textColor="@color/black"
			android:textSize="22sp"
			android:textStyle="bold" />

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:gravity="center_horizontal"
			app:layout_constraintTop_toBottomOf="@id/tv_chosen_items"
			app:layout_constraintBottom_toBottomOf="@id/btn_add_items" >

			<ListView
				android:id="@+id/lv_show"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:divider="#00000000"
				android:dividerHeight="10dp"/>

			<TextView
				android:id="@+id/tv_no_result"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="無符合剩餘熱量需求的結果"
				android:textSize="18dp"
				android:visibility="invisible"/>

		</RelativeLayout>

		<ListView
			android:id="@+id/lv_show_chosen"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:divider="#00000000"
			android:dividerHeight="10dp"
			app:layout_constraintTop_toBottomOf="@id/tv_chosen_items"
			app:layout_constraintBottom_toBottomOf="@id/btn_add_items" />


		<RelativeLayout
			android:id="@+id/btn_add_items"
			android:layout_width="100dp"
			android:layout_height="50dp"
			android:layout_marginStart="280dp"
			android:layout_marginTop="150dp"
			android:layout_marginBottom="20dp"
			android:background="@drawable/button_yellow"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/lv_show_chosen">

			<View
				android:layout_width="150dp"
				android:layout_height="50dp"
				android:background="@drawable/button_yellow" />

			<TextView
				android:id="@+id/add_btn_label_add_item"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="@string/add_btn_label"
				android:textColor="@color/white"
				android:textSize="18sp" />

		</RelativeLayout>

	</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>